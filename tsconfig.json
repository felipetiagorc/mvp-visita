{
  "compilerOptions": {
    "sourceMap": true, //nao tinha
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/upload/dropzoneFacil.js",
    "pages/index.js",
    "components/layout.js",
    "components/UploadForm/index.jsx",
    "pages/upload/index.tsx",
    "components/FileInput/FileInput.jsx",
    "services/upload.service.js"
  ],
  "exclude": ["node_modules"]
}
